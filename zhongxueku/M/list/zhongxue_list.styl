@import '../../base.styl';
@import '../../common/navBar.styl';
@import '../common/component/starScore.styl';
@import '../../common/component/ImagePlayer.styl';

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  margin-bottom: 5px;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
body {
  margin: 0;
  padding: 0;
  background-color: #fff;
}
.overflow-hidden {
  overflow: hidden;
}
a {
  text-decoration: none;
  color: #535353;
}
a:hover {
  color: #00c;
}


.nav {
  width: 100%;
  height: 45px;
  //line-height: 45px;
  margin-bottom: 11px;
  background: #5f85df;
  .nav-content {
    text-align: center;

    .logo {
      display: inline-block;
      vertical-align: middle;
      height: 27px;
      margin-right: 8px;
      img {
        height: 100%;
      }
    }
    .title {
      height: 45px;
      line-height: 45px;
      display: inline-block;
      vertical-align: sub;
    }
    .title a {
      padding-left: 8px;
      color: #fff;
      font-size: 17px;
      border-left: 1px solid #fff;
    }
  }
}
.input-box {
  position: relative;
  margin: 11px 15px;
  img {
    position: absolute;
    top: 8px;
    left: 10px;
  }
}
.input-box input,
.show-search .top-line input {
  width: 100%;
  color: #999;
  background-color: #f1f1f1;
  font-size: 14px;
  border-radius: 15px;
  line-height: 25px;
  padding: 5px 34px;
  border: none;
}
::-webkit-input-placeholder {
  font-family: STHeitiSC-Light;
  font-size: 14px;
  color: #999999;
  letter-spacing: 0px;
  text-align: justify;
}
.top-image {
  background: url(../img/zhongxueku/banner.png) no-repeat center;
  background-size: auto 100%;
  height: 167px;
  width: 100%;

}
.address,
.middle-content {
  position: relative;
  border-bottom: 1px solid #e4e4e4;
  height: 50px;
  overflow: hidden;
}
.address {
  margin: 0 auto;
  display: flex;
  height: 50px;
  line-height: 50px;
  .content-block {
    position:relative;
    margin-left: 30px;
    flex: 1;
    border-right: 1px solid #e4e4e4;
    &:last-child {
      border-right: none;
    }
    span {
      font-family: PingFang-SC-Regular;
      font-size: 14px;
      color: #666666;
      line-height: 14px;
      text-align: left;
    }
    img {
      position: absolute;
      right: 25px;
      top: 23px;
    }
  }
}
.middle-content {
  zoom: 1;
  padding: 17px 0;
  color: #999;
  height: 50px;
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after {
    clear: both;
  }
  img {
    float: right;
    margin-right: 25px;
    width: 5px;
    height: 7px;
  }
  span {
    margin-left: 30px;
    font-family: PingFang-SC-Regular;
    font-size: 14px;
    color: #666666;
    line-height: 14px;
    text-align: left;
    float: left;
  }
}
.search-button {
  margin: 25px 20px 15px 20px;
  //width: 335px;
  height: 40px;
  button {
    width: 100%;
    height: 100%;
    background: #4e8be6;
    border-radius: 54px;
    font-family: PingFang-SC-Regular;
    font-size: 17px;
    color: #ffffff;
    line-height: 17px;
    text-align: center;
  }
}
.recommend-or-result {
  overflow: hidden;
  .title {
    background:#f2f4f5;
    width:100%;
    height:34px;
    line-height: 34px;
    margin-left: 0.625rem;
    padding-left: 10px;
  }
  .title span {
    font-size: 18px;
  }
  .single-school {
    display: block;
    zoom: 1;
    overflow: hidden;
    padding: rem(16) 0 rem(16) rem(10) ;
    border-bottom: 1px solid #e4e4e4;
    &:before,
    &:after {
      content: " ";
      display: table;
    }
    &:after {
      clear: both;
    }
    .show-school {
      float: left;
      margin-right: 20px;
      width: 35%;
      height: 84px;
      a {
        display: block;
      }
      img {
        width: 100%;
        height: 100%;
        position: relative;
        top: -2px;
      }
    }
    .school-info {
      position:relative;
      float: left;
      overflow: hidden;
      width: 55%;
      height: 84px;
      .name {
        display: flex;
        //position: absolute;
        font-family: PingFang-SC-Medium;
        font-size: 15px;
        color: #333333;
        letter-spacing: 0;
        line-height: 15px;
        text-align: justify;
        border-bottom: 1px dashed #ddd;
        //span {
        //  position: absolute;
        //  margin-right: 5px;
        //}
        .point {
          width: rem(8);
          margin: 0 rem(2);
          position: relative;
          top: -3px;
        }
        .quyu {
          right: rem(5);
          font-family:PingFang-SC-Regular;
          font-size: 12px;
          color: #999999;
          letter-spacing: 0;
          text-align: justify;
          width: rem(30);
        }
        h3 {
          flex: 1;
        }

      }
      .detail {
        margin-top: 6px;
        p {
          font-family:PingFang-SC-Regular;
          line-height: 13px;
          font-size: 13px;
          color: #666;
          margin-bottom: 7px;
        }
      }
    }
  }

}

.load-more-schools {
  margin: 20px auto;
  font-family: PingFang-SC-Regular;
  font-size: 15px;
  color: #999999;
  line-height: 15px;
  text-align: center;
}
.show-search {
  display: none;
  position: absolute;
  top: 45px;
  z-index: 2;
  width: 100%;
  .top-line {
    margin: 15px;
    overflow: hidden;
  }
  .top-line a {
    float: left;
    padding-top: 3px;
    width: 5%;
    font-size: 25px;
    color: #0ac3a5;
  }
  .top-line input {
    margin-left: 20px;
    float: left;
    width: 85%;
  }
  .result-list {
    border-top: 1.5px solid #cecece;
    width: 100%;

    .result-item {
      margin: 0 auto;
      border-bottom: 1px solid #e4e4e4;
      padding: 14px 15px;
      font-size: 14px;
      color: #999;
    }
  }
}
.mask {
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: none;
  background-color: #000;
}
.show-city,
.show-province,
.show-district,
.show-school-property,
.show-level,
.show-attend-way
{
  display: none;
  z-index: 2;
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #FFF;


.title {
  margin: 15px 15px 0;
  height: 30px;
  line-height: 30px;
  font-size: 17px;
  color: #333;
}
.items {
  overflow: hidden;
  margin: 0 auto 10px;
  width: 264px;
  .item {
    float: left;
    margin: 6px 4px;
    padding: 6px 4px;
    border: 1px solid #cecece;
    //width: 25%;
    //height: 20px;
    line-height: 20px;
    font-size: 13px;
    text-align: center;
  }
}
.sure {
  margin: 15px auto 10px;
  height: 44px;
  width: 254px;
  button {
    width: 100%;
    height: 100%;
    color: #fff;
    background-color: #f90;
    border: 1px solid #f90;
    border-radius: 4px;
    font-size: 17px;
  }
}
.highlight {
  color: #5f85df;
  background-color: #eafdf9;
  border: 1px solid #0ac3a5;
}
}
