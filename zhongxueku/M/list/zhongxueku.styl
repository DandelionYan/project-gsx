@import '../../base.styl';
@import '../../common/navBar.styl';
@import '../common/component/starScore.styl';


.main {
  width: 100%;
}
.header {
  width: 100%;
  height: 45px;
  background: #5f85df;
  .top {
    vertical-align: middle;
    height: 27px;
    line-height: 27px;
    margin: 0 auto;
    width: 176px;
    .imgdiv {
      float: left;
      width: 64px;
      margin-top: 9px;
      img {
        width: 64px;
      }
    }
      .txtdiv {
        float: left;
        width: 112px;
        margin-top: 9px;
        span {
          height: 27px;
          line-height: 27px;
          margin-left: 9px;
          padding-left: 9px;
          border-left: 1px solid #fff;
        }
          .header-title {
            font-family: STHeitiSC-Medium;
            font-size: 17px;
            color: #ffffff;
          }
      }
  }
}
.middle {
  img {
    background: #d8d8d8;
    width: 100%;
    height: 240px;
  }
}
  .content {
    box-shadow:0 0 0 0 #dddddd;
    width:100%;
    .content-middle {
      padding-top: 20px;
      padding-left: 15px;
      padding-right: 15px;
      background:#ffffff;
    }
    .title {
      font-family: PingFang-SC-Semibold;
      font-size: 20px;
      color: #333333;
      letter-spacing: 0;
      line-height: 20px;
      margin-bottom: 6px;
    }
      .content-school {
        width: 100%;
        min-height: 20px;
        p {
          margin-top: 10px;
          &:last-child {
            padding-bottom: 20px;
          }
          span {
              font-family: PingFang-SC-Regular;
              letter-spacing: 0;
              line-height: 15px;
              text-align: left;
            }
        }
        .key {
          color: #777777;
        }
          .value {

            color:#333;
          }
        .first {
          color:#ff9a00;
        }
      }
  }

.card-w {
  position: relative;
  margin: 0;
  width: 100%;
  margin-top: 10px;
  box-shadow:0 0 0 0 #dddddd;
  .card-nav {
    background:#ffffff;
    border-bottom: 1px solid #ebebeb;
    width: 100%;
    line-height: 60px;
    height: 60px;
    padding-left: 15px;
    padding-right: 15px;
    div {
      float: left;
      text-align: center;
      a {
        font-family: PingFang-SC-Regular;
        color: #666;
      }
    }
    .cur {
      border-bottom: 3px solid #5f85df;
      letter-spacing: 0;
      margin-top: -2px;
      a {
        color: #5f85df;
      }
    }
  }

    .content-card {
      margin-bottom: 10px;
      background: #ffffff;
      &:last-child {
        margin-bottom: -10px;
      }
      .title {
        font-family: PingFang-SC-Medium;
        color: #5f85df;
        img {
          margin-left: -15px;

        }
        span {
          margin-left: 10px;
        }
      }
      .summary {
        font-family: PingFang-SC-Regular;
        color: #333333;
        letter-spacing: 0;
        text-align: justify;
        //text-indent: 2em;
        p {
          line-height: 24px;
        }
      }
      .max-height {
          max-height: 360px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: normal;
      }
      .more {
        position: relative;
        margin: 0 auto;
        background:#ffffff;
        border-radius:2px;
        width:118px;
        height:37px;
        border: 1px solid #ff9a00;
        margin-top: 12px;
        p {
          position: absolute;
          font-family:PingFang-SC-Regular;
          font-size:16px;
          color:#ff9a00;
          top: 6px;
          left: 15px;
        }
        img {
          position: absolute;
          top: 15px;
          left: 80px;
        }
      }

      //banner
      .banner {
        position: relative;
        height: 220px;
        //overflow: hidden;
        margin: 0 auto;
        text-align: center;
        width: 100%;
        ul {
          position: absolute;
          overflow: hidden;
          z-index: 100;
          top: 210px;
          left: 43%;
          li {
            list-style-type: none;
            margin-right: 7px;
            float: left;
            border-radius: 100%;
            width: 6px;
            height: 6px;
            background-color: #ddd;
          }
          .banner-selected {
            background: #5f85df;
          }
        }
      }

      .picture {
        .img-show {
          height: 100%;
          overflow: hidden;
          position: relative;
          .item {
              position: absolute;
              left: 0;
              top: -15px;
              height: 100%;
              width:100%;
              overflow:hidden;
              opacity:0;
              transition: opacity 0.8s linear;
              -webkit-transition: opacity 0.8s linear;
            img {
              width: 100%;
              height: 250px;
            }
          }
          .active {
            opacity: 1;
          }
        }
      }
    }
      .top {
        padding-top: 50px;
      }

//    学校简介
  .content-para {
    padding: 20px 15px;
  }
    .copyright {
      font-size: 12px;
      border: 1px solid #E2E2E2;
      background: #F3F8FE;
      p {
        padding: 10px 15px;
      }
    }
}


@media screen and (max-width: 350px) {
  .content-card .title {
    font-size: 14px;
  }
  .content-school{
    span {
      font-size: 13px;
    }
  }
  h3 {
    font-size: 12px;
  }
  .cur {
    a {
      font-size: 12px;
    }
  }
  .summary {
    font-size: 13px;
  }
}
@media screen and (min-width: 350px) {
  .content-card .title {
    font-size: 16px;
  }
  .content-school {
    span {
      font-size:15px;
    }
  }
  .summary {
    font-size: 15px;
  }
  h3 {
    font-size: 14px;
  }
  .cur {
    a {
      font-size: 14px;
    }
  }
}



